{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",

    "sourceMap": true,
    "target": "es2016"
  },
  "exclude": [
    "coverage",
    "dist",
    "node_modules",
    "public",
    "jest.config.mjs",
    "eslint.config.js",
    "rollup.config.js",
    "webpack.config.js",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "*.mjs",
    "*.cjs"
  ]
}
